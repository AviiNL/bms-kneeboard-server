        <tr>
            <th colspan="10" class="leader">
                Package Elements
            </th>
        </tr>
        <tr>
            <th>#</th>
            <th>callsign</th>
            <th>flight #</th>
            <th>Role</th>
            <th>aircraft</th>
            <th>task</th>
